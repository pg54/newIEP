<template>
    <div class="main">
        <div class="pageNavbar">
            <el-breadcrumb separator=">">
                <el-breadcrumb-item  @click.native="setPath(index)" v-for="(ele, index) in xpath">{{ setPathTitle(ele)}}</el-breadcrumb-item>

            </el-breadcrumb>
        </div>
        <div class="tabs">
            <div class="tabs-chose">

                <li v-for="(tab, index) in tabs" :class="{active : currentTab === index }" @click="toNewPage(index)">
                    {{ setPathTitle(tab) }}
                </li>

            </div>
            <div class="tabs-content">
                <router-view></router-view>
            </div>
        </div>

    </div>
</template>
<script>
    import QuestionPaper from '../../components/QuestionPaper.vue';
    import TestPaper from './child/testPaper.vue';
    import TestResult from '../../components/resultPaper.vue';
    import TestReport from '../../components/reportPaper.vue';
    import ServiceDyma from './MyServiceDyma/MyServiceDyma.vue';
    import vueTab from '../../components/vue-tab.vue';
    import serviceCPEP from '../../components/serviceCPEP.vue';
    import api  from '../../api/index.js';
    export default {
        name: 'ServiceTool',
        components: {
            ServiceDyma,
            QuestionPaper,
            vueTab,
            TestPaper,
            TestResult,
            TestReport,
            serviceCPEP
        },
        computed: {
            xpath: function () {
                let pathStr =  this.$route.path
                let pathArr = pathStr.split('/')
                pathArr.splice(0,1)
                console.log(pathArr)
                return pathArr
            },
        },
        data() {
            return {
                rootPath: 'serviceTool',
                tabs: ['serviceDynamics', 'consultancy', 'cpep'],
                currentTab: 0,
                pathSource: {
                    'serviceTool': '当前位置',
                    'serviceDynamics': '动态',
                    'cpep': 'CPEP',
                    'consultancy': '咨询管理',
                    'sendQuestionnaire': '已发送问卷',
                    'templateList': '模板列表',
                    'startCPEP': 'CPEP评测开始',
                    'testedCPEP': '已评测CPEP患者列表'
                }
            }
        },
        watch: {


        },
        methods: {
            toNewPage(index) {
                this.currentTab = index;
                let pathStr = '/' + this.rootPath + '/' + this.tabs[index];
                console.log(pathStr)
                this.$router.push({path: pathStr})
            },
            setPathTitle(title) {
                return this.pathSource[title]
            },
            setPath(index) {
                if (index === 0) {
                    return
                } else {
                    let newArr = [];
                    for (let i = 0;i < index + 1;i++) {
                        newArr.push(this.xpath[i])
                    }
                    let pathStr = '/' + newArr.join('/')
                    this.$router.push({path: pathStr})
                }
            }

        },
        created() {

        }
    };
</script>

